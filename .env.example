# Configurações principais do LTM
OPENAI_API_KEY=your_openai_api_key_here
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=instagram-scraper-api2.p.rapidapi.com
RAPIDAPI_ALT_HOSTS=instagram-scraper.p.rapidapi.com,instagram-scraper-api.p.rapidapi.com,instagram-bulk-scraper-latest.p.rapidapi.com

# Configurações do Railway
RAILWAY_ENVIRONMENT=production
PORT=8000

# Configurações de notificação (opcionais)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Configurações adicionais (opcionais)
REPLICATE_TOKEN=your_replicate_token_here
DATABASE_URL=your_database_url_here
POSTGRES_DSN=your_postgres_dsn_here

# Configurações de sistema
PYTHONUNBUFFERED=1
TZ=America/Sao_Paulo

# Configurações do Supabase
# Preencha com as credenciais do seu projeto Supabase
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_BUCKET=instagram-images

# Configurações de monitoramento
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
NOTIFICATIONS_ENABLED=true

# Limites de alerta (opcionais)
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
MAX_CONSECUTIVE_FAILURES=3
INACTIVITY_ALERT_HOURS=6

# Configurações de Instagram (contas)
INSTAGRAM_BUSINESS_ACCOUNT_ID_MILTON=
INSTAGRAM_ACCESS_TOKEN_MILTON=
INSTAGRAM_BUSINESS_ACCOUNT_ID_ALBANEZ=
INSTAGRAM_ACCESS_TOKEN_ALBANEZ=