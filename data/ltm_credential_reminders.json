{
  "title": "Lembretes Permanentes de Credenciais",
  "version": "1.0",
  "created_at": "2025-10-24",
  "purpose": "Detectar imediatamente variáveis ausentes e orientar correções.",
  "triggers": [
    {
      "name": "missing_telegram_credentials",
      "type": "env_check",
      "variables": ["TELEGRAM_BOT_TOKEN", "TELEGRAM_CHAT_ID"],
      "severity": "high",
      "message": "Credenciais do Telegram ausentes. Notificações não serão enviadas.",
      "suggestions": [
        "Definir TELEGRAM_BOT_TOKEN e TELEGRAM_CHAT_ID no Railway",
        "Confirmar inclusão no arquivo .env local",
        "Reexecutar verificação com railway_realtime_variable_check.py"
      ],
      "docs": ["AUDITORIA_VARIAVEIS_RAILWAY.md", "RELATORIO_CORRECAO_TELEGRAM.md"]
    },
    {
      "name": "missing_rapidapi_key",
      "type": "env_check",
      "variables": ["RAPIDAPI_KEY"],
      "severity": "medium",
      "message": "RAPIDAPI_KEY ausente. Fallbacks de scraping podem falhar.",
      "suggestions": [
        "Definir RAPIDAPI_KEY no Railway",
        "Configurar RAPIDAPI_HOST (padrão já definido)",
        "Carregar .env e validar com final_system_verification.py"
      ],
      "docs": ["AUDITORIA_VARIAVEIS_RAILWAY.md"]
    },
    {
      "name": "missing_instagram_core",
      "type": "env_check",
      "variables": ["INSTAGRAM_ACCESS_TOKEN", "INSTAGRAM_BUSINESS_ACCOUNT_ID"],
      "severity": "critical",
      "message": "Variáveis principais do Instagram ausentes.",
      "suggestions": [
        "Definir valores no Railway",
        "Validar conta padrão no .env",
        "Executar test_instagram_token.py"
      ],
      "docs": ["AUDITORIA_VARIAVEIS_RAILWAY.md"]
    }
  ],
  "locations": {
    "env_file": ".env",
    "backup_credentials": "CREDENCIAIS_PERMANENTES.json",
    "railway_panel": "Project > Service > Variables"
  },
  "automation": {
    "run_on_start": true,
    "check_script": "railway_realtime_variable_check.py",
    "fallback_script": "final_system_verification.py"
  }
}